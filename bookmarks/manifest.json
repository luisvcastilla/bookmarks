{
  "manifest_version": 2,
  "name": "Cion",
  "description": "Real time collaboration",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://www.google.com/*"],
      "css": ["mystyles.css"],
      "js": ["jquery.js", "popup.js"]
    }
  ],
  "permissions": ["http://*.google.com/", "https://*.google.com/","tabs","gcm","storage","activeTab"],
  "background":{
    "scripts": ["background.js"]
  },
  "externally_connectable": {
    "matches": ["*://*.cion.local/*"]
  }
}
